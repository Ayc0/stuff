{
	"private": true,
	"name": "ayc0_github_page",
	"version": "0.0.5",
	"license": "MIT",
	"scripts": {
		"start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
		"build": "preact build",
		"serve": "preact build && preact serve",
		"dev": "preact watch",
		"lint": "eslint src",
		"test:projects": "node src/utils/projects/verify.test.js",
		"test": "yarn test:projects",
		"deploy": "yarn test && rm -rf build && preact build && git add build && git commit -am $npm_package_version && git tag $npm_package_version && git subtree split --prefix build -b gh-pages && git push -f origin gh-pages:gh-pages"
	},
	"eslintConfig": {
		"extends": "eslint-config-synacor"
	},
	"eslintIgnore": [
		"build/*"
	],
	"devDependencies": {
		"babel-plugin-emotion": "^9.2.0",
		"eslint": "^4.9.0",
		"eslint-config-synacor": "^2.0.2",
		"identity-obj-proxy": "^3.0.0",
		"if-env": "^1.0.0",
		"jest": "^21.2.1",
		"preact-cli": "^2.1.0"
	},
	"dependencies": {
		"emotion": "^9.2.3",
		"joi": "^13.4.0",
		"preact": "^8.2.6",
		"preact-compat": "^3.17.0",
		"preact-emotion": "^9.2.3",
		"preact-router": "^2.5.7"
	}
}
