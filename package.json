{
  "private": true,
  "name": "ayc0-github-stuff",
  "version": "0.2.4",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn -s serve || yarn -s dev",
    "serve": "yarn -s build:preact && preact serve",
    "dev": "preact watch",
    "clean:build": "rm -rf build",
    "build:preact": "preact build && mv build/stuff/* build/ && rmdir build/stuff && sed -i 's/stuff\\/stuff/stuff/g' build/sw.js",
    "build": "yarn -s clean:build && yarn -s build:preact",
    "test:lint": "eslint src",
    "test:projects": "node src/utils/projects/verify.test.js",
    "test": "yarn -s test:lint && yarn -s test:projects",
    "commit:tag": "git commit -am $npm_package_version && git tag $npm_package_version",
    "deploy:tag": "git add build && yarn -s commit:tag",
    "deploy:publish_build": "git subtree split --prefix build -b gh-pages && git push -f origin gh-pages:gh-pages",
    "deploy:bump_version": "node utils/bumpVersion.js",
    "deploy": "yarn -s test && yarn build && yarn deploy:bump_version && yarn deploy:tag && yarn deploy:publish_build"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-emotion": "^9.2.4",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.1.0"
  },
  "dependencies": {
    "emotion": "^9.2.4",
    "fuse.js": "^3.2.1",
    "joi": "^13.4.0",
    "lodash": "^4.17.10",
    "node-sass": "^4.9.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-emotion": "^9.2.4",
    "preact-router": "^2.5.7",
    "sass-loader": "^7.0.3"
  }
}