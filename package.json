{
  "private": true,
  "name": "ayc0_github_page",
  "version": "0.0.7",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "rm -rf build && preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test:projects": "node src/utils/projects/verify.test.js",
    "test": "yarn lint && yarn test:projects",
    "deploy": "yarn test && yarn build && yarn deploy:tag && yarn deploy:publish_build",
    "deploy:tag": "git add build && git commit -am $npm_package_version && git tag $npm_package_version",
    "deploy:publish_build": "git subtree split --prefix build -b gh-pages && git push -f origin gh-pages:gh-pages"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-emotion": "^9.2.0",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.1.0"
  },
  "dependencies": {
    "emotion": "^9.2.3",
    "fuse.js": "^3.2.1",
    "joi": "^13.4.0",
    "lodash": "^4.17.10",
    "node-sass": "^4.9.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-emotion": "^9.2.3",
    "preact-router": "^2.5.7",
    "sass-loader": "^7.0.3"
  }
}
